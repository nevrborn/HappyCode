<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="131dp"
    android:background="@android:color/black"
    >

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="6dp"
        android:background="@android:color/black"
        >

        <ImageView
            android:id="@+id/list_item_tester_icon"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="tester"
            android:src="@mipmap/strength_hardworker"
            />

        <ImageView
            android:id="@+id/list_item_icon_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/list_item_tester_icon"
            android:contentDescription="code"
            android:src="@mipmap/icon_challenger"
            />

        <ImageView
            android:id="@+id/list_item_icon_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/list_item_icon_1"
            android:contentDescription="code"
            android:src="@mipmap/icon_connector"
            />

        <ImageView
            android:id="@+id/list_item_icon_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/list_item_icon_2"
            android:contentDescription="code"
            android:src="@mipmap/icon_hardworker"
            />

        <TextView
            android:id="@+id/list_item_date_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/list_item_tester_icon"
            android:gravity="center_vertical"
            android:text="24-11-2016  10:26 uur"
            android:textColor="@color/colorHappyCode"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            />

    </RelativeLayout>

</RelativeLayout>

