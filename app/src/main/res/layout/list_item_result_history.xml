<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="6dip"
    android:background="@color/colorBlack"

    >

    <ImageView
        android:id="@+id/list_item_tester_icon"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="tester"
        android:src="@mipmap/strength_hardworker"
        />

    <ImageView
        android:id="@+id/list_item_icon_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_tester_icon"
        android:layout_marginRight="6dip"
        android:contentDescription="code"
        android:src="@mipmap/icon_challenger"
        />

    <ImageView
        android:id="@+id/list_item_icon_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_icon_1"
        android:layout_marginRight="6dip"
        android:contentDescription="code"
        android:src="@mipmap/icon_connector"
        />

    <ImageView
        android:id="@+id/list_item_icon_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_icon_2"
        android:layout_marginRight="6dip"
        android:contentDescription="code"
        android:src="@mipmap/icon_hardworker"
        />

    <TextView
        android:id="@+id/list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/list_item_tester_icon"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorHappyCode"
        android:layout_alignWithParentIfMissing="true"

        android:gravity="center_vertical"
        android:text="24-11-2016  10:26 uur"
        android:textSize="18sp"/>

</RelativeLayout>

